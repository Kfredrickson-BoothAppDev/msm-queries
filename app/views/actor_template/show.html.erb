 <h1>
  Actor #<%= @the_actor.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%= @the_actor.id %>" class="btn btn-block btn-outline-secondary">
  Delete actor
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
     <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
     <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src=" <%= @the_actor.image %>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    over 7 years ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    over 7 years ago
  </dd>
</dl>

<hr>

<h2>Filmography</h2>
<table border="1">
<% @filmography.each do|a_film| %>
  <tr>
    <td>
    <%= a_film.id %>
    </td>
    <td>
        <% d = Character.where({ :id => a_film.the_id}).at(0)%>
        <%= d.name %>
        </td>
  </tr>
  <% end %>
</table>
